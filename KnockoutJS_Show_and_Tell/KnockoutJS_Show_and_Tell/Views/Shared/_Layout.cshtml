<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/knockout")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <header>
        <div class="content-wrapper">
            <div class="float-left">
                <p class="site-title">Knockout Examples</p>
            </div>
            <div class="float-right">
                <nav>
                    <ul id="menu">
                        <li>@Html.ActionLink("jQuery", "Index", "jQuery")</li>
                        <li>@Html.ActionLink("Basics", "Index", "KO_Basics")</li>
                        <li>@Html.ActionLink("Weather", "Index", "Weather")</li>
                    </ul>
                </nav>
            </div>
        </div>
    </header>
    <div id="body">
        @RenderSection("featured", required: false)
        <section class="content-wrapper main-content clear-fix">
            @RenderBody()

            <div id="accordion" class="knockoutDebugSection">
                <h3><a href="#">KO Debug</a></h3>
                <div class="knockoutDebugText">
                    <pre data-bind="text: JSON.stringify(ko.toJS($data), null, 2)"></pre>
                </div>
            </div>
        </section>
    </div>
    <footer>
        <div class="content-wrapper">
            <div class="float-left">
            </div>
        </div>
    </footer>
    <div class="loading-overlay">
        <img src="~/Images/loading.gif" alt="" />
    </div>
    @RenderSection("scripts", required: false)
    <script type="text/javascript">
        $(document).ready(function () {
            $("#accordion").accordion({ active: false, collapsible: true, fillSpace: true });
        });
    </script>
</body>
</html>
